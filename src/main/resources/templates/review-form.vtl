<p>Add a new Review:</p>

<form action="/reviews" method="post">
  <input id="movieId" name="movieId" type="hidden" value="$movie.getId()">
  <label for="reviewer">User:</label>
  <input id="reviewer" name="reviewer" type="text">
  <br>
  <label for="content">Review:</label>
  <textarea name="content" cols="140" rows="5" type="text" autocomplete="off"></textarea>
  <button type="submit" class="btn btn-default">Add review</button>
</form>
